<h2>List of ratings</h2>

<p><%= link_to 'Rate a beer', new_rating_path, class: 'btn btn-primary' %></p>

<p>Total number of ratings: <%= @ratings.count %></p>
<div class="row">
  <div class="col-md-4">
    <h3>Top Breweries</h3>
    <%= render 'top_list', :records => @top_breweries %>
  </div>
  <div class="col-md-4">
    <h3>Top Beers</h3>
    <%= render 'top_list', :records => @top_beers %>
  </div>
  <div class="col-md-4">
    <h3>Top Styles</h3>
    <%= render 'top_list', :records => @top_styles %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h3>Most Active Users</h3>
    <% cache do %>
        <%= render 'top_users', :users => @top_users %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h3>Recent Ratings</h3>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Beer</th>
        <th>Rating</th>
        <th>By</th>
      </tr>
      </thead>
      <% @recent_ratings.each do |rating| %>
          <tr>
            <td><%= link_to rating.beer, rating.beer %></td>
            <td><%= rating.score %></td>
            <td><%= rating.user %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
